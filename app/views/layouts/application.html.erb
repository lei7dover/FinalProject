
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>TrophyCase</title>

    <!-- Bootstrap Core CSS -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                     <% if @organization %>
                      <%= link_to image_tag(@organization.logo_url,:class => "navbar-brand"), root_path%>
                      <% else %>
                      <%= link_to image_tag(@organization, :class => " navbar-brand"), root_path %>
                    <% end %>


            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                      <a href="#">Search <span id="magnify" class= "glyphicon glyphicon-search" aria-hidden="true"></span>
                      <input name="search" type="search" value="Enter your search here" /></a>
                    </li>
                    <li id= "title">
                      <h3> <strong>TrophyCase</strong></h3>
                    </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <%= yield %>
    <!-- Page Content -->

    <div class = "container">
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <nav id="navbar-bottom" class = "navbar navbar-default navbar-fixed-bottom navbar-right">
                      <div class= "container">

                          <% if @current_user %>
                          <p class = "navbar-text navbar-right" > <%= @current_user.name.titleize %>, <%= link_to "Log Out", user_session_path(@current_user),method: :delete %>
                        </p>
                        <p class = "navbar-text navbar-right" > <%= link_to "Add Person & Record", new_person_path(@current_user) %>
                      </p>
                      <p class = "navbar-text navbar-right" > <%= link_to "Add your Organization", new_organization_path(@current_user) %>
                    </p>
                    <p class = "navbar-text navbar-right" > <%= link_to "Edit your Organization", edit_organization_path(@current_user) %>
                  </p>
                          <% else %>
                        <p class = "navbar-text navbar-right">
                          <%= link_to "Admin Log In", new_user_session_path%>
                        </p>
                        <p class = "navbar-text navbar-right">
                          <%= link_to "Admin Sign Up", new_user_path %>
                          <% end %>
                        </p>
                        <p class = "navbar-text navbar-left">Copyright &copy; TrophyCase 2015, All Rights Reserved</p>
                      </div>
                    </nav>
                </div>
            </div>
        </footer>
      </div>

    <!-- /.container -->

</body>

</html>
