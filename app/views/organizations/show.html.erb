<div class="container">

    <!-- Heading Row -->
    <div class="row">
        <div class="col-xs-12 col-md-6">
              <%= image_tag(@organization.org_photo_url, :class => "img-responsive") %>
        </div>
        <div class = "col-xs-0 col-md-2">
        </div>
        <!-- /.col-md-8 -->
        <div class="col-xs-12 col-xs-offset-2 col-md-4">

            <h1><%=@organization.name%></h1>
            <p>Address: <%=@organization.street %> <%= @organization.city %> <%= @organization.state %> <%= @organization.zip %></p>
            <p>Phone Number <%= @organization.phone_number %></p>
        </div>

        <!-- /.col-md-4 -->
    </div>
    <!-- /.row -->

    <hr>

    <!-- Call to Action Well -->
    <!--<div class="row">
        <div class="col-lg-12">
            <div class="well text-center">
                Check out our athletic accomplishments!
            </div>
        </div>-->
        <!-- /.col-lg-12 -->
  <!--  </div>-->
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row text-center">
      <h3>Search TrophyCase</h3><br>
        <div class="col-xs-12 col-md-3">
            <!--<a class="btn btn-default btn-success " href="/people">By Sport</a>-->
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                By Sport
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <%@organization.people.records_sport_pluck.each do |sport|%>
                <li><%=link_to sport, organization_people_path(@organization, :records_sport_filter => sport) %> </li>
                <% end %>
              </ul>
            </div>

        </div>

        <!-- /.col-md-4 -->
        <div class="col-xs-12 col-md-3">
            <!--<a class="btn btn-default btn-success " href="/people">Achievements</a>-->
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Achievements
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <%@organization.people.records_sport_pluck.each do |achievements|%>
                <li><%=link_to achievements, organization_people_path(@organization) %> </li>
                <% end %>
              </ul>
            </div>
        </div>
        <!-- /.col-md-4 -->
        <div class="col-xs-12 col-md-3">
            <!--<a class="btn btn-default btn-success" href="/people">By Year</a>-->
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Class of by Year
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <%@organization.people.people_class_of_pluck.each do |classof|%>
                <li><%=link_to classof, organization_people_path(@organization, :people_class_of_filter => classof) %> </li>
                <% end %>
              </ul>
            </div>
        </div>
        <!-- /.col-md-4 -->
        <div class="col-xs-12 col-md-1">
            <!--<a class="btn btn-default btn-success" href="/people">Last Name A-Z</a>-->
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Last Name (A-Z)
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <%@organization.people.people_last_name_pluck.each do |lastname|%>
                <li><%=link_to lastname, organization_people_path(@organization, :people_last_name_filter => lastname) %> </li>
                <% end %>
              </ul>
            </div>
        </div>
        <!-- /.col-md-4 -->
    </div><br><br>
    <!-- /.row -->
</div><br><br><br><br><br>
