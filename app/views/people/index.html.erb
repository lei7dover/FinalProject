<div class = "container">
  <% if @people.blank? %>
    <h4>There are no people that match your search <%= params[:search] %>.</h4>
  <% end %>
  <div class  = "row" >
<% @people.each do |p| %>
  <div class = "col-md-3">
    <span><strong><%= link_to "#{p.first_name}" " " "#{p.last_name}".html_safe, organization_person_path(@organization,p) %></strong></span>
    <% if p.class_of %>
    <span> (Class of <%= p.class_of %>)</span>
    <% end %>
    <ul>
      <% p.records.each do |r| %>
        <li><%= r.sport.titleize %></li>
      <% end %>
    </ul>
    </div>
    <div class = "col-md-3">
      <p><%= image_tag(p.photo_url, :class => "img-responsive") %></p>
    </div>
    <% end %>
  </div>
</div>
