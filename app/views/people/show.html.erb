<div class = "container">
  <br>
  <div class = "col-xs-12 col-md-6">
    <h3><%= @person.first_name%> <%= @person.last_name %></h3>
      <% if @person.class_of %><span>(Class of <%= @person.class_of %>)</span><br><br> <% end %>
      <% @person.records.each do |r| %>
      <ul>
        <li>
          <span>Sport: <%= r.sport.titleize %></span>
        </li>
        <% if r.bio %>
        <li>
          <span>Bio: <%= r.bio.titleize %></span>
        </li>
        <% end %>
          <% if r.induction_year %>
        <li>
          <span>Inducted into Hall of Fame: <%= r.induction_year %></span>
        </li>
          <% end %>
          <% if r.first_active_year && r.last_active_year %>
        <li>
          <span>Participated: <%= r.first_active_year%>-<%= r.last_active_year%></span>
        </li>
        <% end %>
        <li>
          <span>Achievements:
            <ul>
            <% if r.hall_of_fame == "1" %>
             <li>Hall of fame</li>
            <% end %>
            <% if r.all_state_1st_team == "1" %>
            <li>All state 1st team</li>
            <% end %>
            <% if r.all_state_2nd_team == "1" %>
            <li> All state 2nd team </li>
            <% end %>
            <% if r.all_state_3rd_team == "1" %>
            <li> All State 3rd Team</li>
            <% end %>
          </ul>
          </span>
        </li>
      </ul>
      <hr>
      <% end %>
      <div class = "row">
        <div class = "col-xs-12 col-md-4">
          <a href="https://www.facebook.com/sharer/sharer.php?u=SHAREMESSAGE" title="Share on Facebook" target="_blank" class="btn btn-facebook"><i class="fa fa-facebook"></i> Share to Facebook</a>
        </div>
        <div class = "col-xs-12 col-md-4">
      <% if current_user %>
      <%= link_to "Edit this Person", edit_organization_person_path(@organization,@person) %>
      <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, organization_person_path(@organization,@person), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div><br>
  </div>
<div class = "col-xs-10 col-md-3">
<%= image_tag(@person.photo_url, class: "img-responsive") %>
</div>

</div><br><br><br><br><br>
