<div class = "container">
  <h1>Sign Up to adminster your own organization's athletic records </h1>
  <%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :name, :placeholder => "Type your name..." %><br />
  <%= f.email_field :email, :placeholder => "Type your email..." %><br />
  <br />
  <%= f.password_field :password, :placeholder => "Type your password..." %><br />
  <br />
  <%= f.password_field :password_confirmation, :placeholder => "Please re-type your password..." %><br />
  <%= f.submit "Sign Up" %>
  <% end %>
</div>
